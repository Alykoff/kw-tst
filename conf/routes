# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index
POST    /signin                     controllers.Application.signin

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file)


# REST API
GET     /user/:id                   controllers.UserController.get(id: Long)
POST    /user                       controllers.UserController.create

GET     /store/:page                controllers.StoreController.get(page: Long)

POST    /order/                     controllers.OrderController.create
POST    /order/:id                  controllers.OrderController.edit(id: Long)
GET     /order/:id                  controllers.OrderController.get(id: Long)