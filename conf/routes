# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index
GET     /logout                     controllers.Application.logout
POST    /signin                     controllers.Application.signin
POST    /signup                     controllers.Application.signup
GET     /catalog                    controllers.OrderController.order

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file)


# REST API
# пользователь
GET     /user/:id                   controllers.UserController.get(id: Long)
POST    /user                       controllers.UserController.create

# склад
GET     /store/:page                controllers.StoreController.getByPage(page: Long)
POST    /store                      controllers.StoreController.get

# заказ
POST    /order/create               controllers.OrderController.create
POST    /order/:id                  controllers.OrderController.edit(id: Long)
GET     /order/:id                  controllers.OrderController.get(id: Long)
